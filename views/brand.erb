<div class="card">
  <h2><%= @brand.title %></h2>
  <h4>Here are all the stores that carry this brand:</h4>

  <% if @brand.stores.any?() %>
  <ul>
    <% @brand.stores.each() do |store| %>
      <li><a href="/store/<%= store.id %>"><%= store.title %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no Stores yet!</p>
<% end %>
</div>
<br>
<div class="card home">
  <a href="/"><button class="btn">Return To Homepage</a>
</div>
