<div class="row">
  <div class="col-sm-6">
    <div class="card centered">
      <video autoplay loop>
         <source src="/vid/cat.mp4">
      </video>
      <br>
      <div class="fail">
        <a href="/"><button class="btn">Better Try Again</a>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <h3>There were some errors:</h3>
      <ul>
        <% @store.errors().full_messages().each() do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
